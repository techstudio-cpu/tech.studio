@media (max-width: 480px) {
  .hero-title {
    font-size: 2rem;
  }

  .hero-subtitle {
    font-size: 1.1rem;
  }

  .hero-description {
    font-size: 0.9rem;
  }

  .section-title {
    font-size: 1.8rem;
  }

  .service-card-title {
    font-size: 1.2rem;
  }

  .category-title {
    font-size: 1.7rem;
  }

  .nav-logo {
